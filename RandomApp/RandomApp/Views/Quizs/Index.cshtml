@model IEnumerable<RandomApp.Models.Quiz>

@{
    ViewBag.Title = "New Quiz";
}

<h2>Create a new Quiz for your students</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.QuizName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grade.GradeText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subject.SubjectText)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.QuizName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Grade.GradeText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subject.SubjectText)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.QuizID }) |
            @Html.ActionLink("Details", "Details", new { id=item.QuizID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.QuizID })
        </td>
    </tr>
}

</table>
@Html.ActionLink("Add Questions >", "Index", "Questions")
