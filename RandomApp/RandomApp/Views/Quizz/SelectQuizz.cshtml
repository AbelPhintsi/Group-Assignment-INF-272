@model RandomApp.viewModels.QuizVM

@{
    ViewBag.Title = "Select Quiz";
}

<div class="container">
  
        <div  style="width: 35%; margin: 20% 35%;">
            <h3>Select a Quiz to take</h3><br/>

                @using (Html.BeginForm("SelectQuizz", "Quizz", FormMethod.Post))
                {
                    @Html.DropDownListFor(model => model.QuizID, Model.ListOfQuizz, new { @class = "form-control", @style = "margin-left:51px;" })<br />
                    <button type="submit" id="Enter" class="btn-default";">Take Quiz Now</button>
                }
            </div>
        </div>
    

